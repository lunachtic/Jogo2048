<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/game_title"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

        <ImageView
            android:id="@+id/img00"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img01"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img02"
            app:layout_constraintStart_toEndOf="@+id/img00"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img02"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img03"
            app:layout_constraintStart_toEndOf="@+id/img01"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img03"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img02"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img00"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img12"
            app:layout_constraintStart_toEndOf="@+id/img10"
            app:layout_constraintTop_toBottomOf="@+id/img01"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img13"
            app:layout_constraintStart_toEndOf="@+id/img11"
            app:layout_constraintTop_toBottomOf="@+id/img02"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img13"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img12"
            app:layout_constraintTop_toBottomOf="@+id/img03"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img20"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img10"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img21"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img22"
            app:layout_constraintStart_toEndOf="@+id/img20"
            app:layout_constraintTop_toBottomOf="@+id/img11"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img22"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img23"
            app:layout_constraintStart_toEndOf="@+id/img21"
            app:layout_constraintTop_toBottomOf="@+id/img12"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img23"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img22"
            app:layout_constraintTop_toBottomOf="@+id/img13"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img30"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img20"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img31"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img32"
            app:layout_constraintStart_toEndOf="@+id/img30"
            app:layout_constraintTop_toBottomOf="@+id/img21"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img32"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/img33"
            app:layout_constraintStart_toEndOf="@+id/img31"
            app:layout_constraintTop_toBottomOf="@+id/img22"
            tools:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/img33"
            android:layout_width="78dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img32"
            app:layout_constraintTop_toBottomOf="@+id/img23"
            tools:srcCompat="@drawable/img0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtScoreTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/score_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtBestTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtScoreTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtScoreTitle" />

    <TextView
        android:id="@+id/txtBestTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/best_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBest"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txtBestTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtBestTitle" />

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:onClick="onNewGameClicked"
        android:text="@string/new_game"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtScore" />

</androidx.constraintlayout.widget.ConstraintLayout>